<%= form_for @form do |f| %>
  <%= f.object.errors.full_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <br />
    <%= f.text_area :content, rows: 16, cols: 80 %>
  </p>
  <p>
    <%= f.submit 'Publish', name: 'post[publish]' %>
    <%= f.submit %>
  </p>
<% end %>
